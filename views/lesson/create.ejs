<%- include('../header') -%>
<h2 class="title">Create Lesson</h2>

<form class="form-control" method="post">
  <label for="title">Title:</label>
  <input
    id="title"
    name="title"
    placeholder="What's the name module?"
    required="required"
  /><br />

  <label for="description">Description:</label>
  <input
    id="description"
    name="description"
    placeholder="What's the name module?"
    required="required"
  /><br />

  <label for="module">Module:</label>
  <select id="module" name="module" required="required">
    <option value="">--</option>
    <% for (const {id, title} of modules) {%>
    <option value="<%=id%>"><%=title%></option>
    <% } %>
  </select>
  <br />

  <label for="next_lesson">Next Lesson:</label>
  <select id="next_lesson" name="next_lesson" required="required">
    <option value="">--</option>
    <% for (const {id, title} of lessons) {%>
    <option value="<%=id%>"><%=title%></option>
    <% } %>
  </select>
  <br />

  <button type="submit">Submit</button>
</form>
<%- include('../footer') -%>
